{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@plugins/*": ["./plugins/*"],
      "@plugins": ["./plugins"],
      "@models/*": ["./models/*"],
      "@models": ["./models"],
      "@routes/*": ["./routes/*"],
      "@routes": ["./routes"],
      "@typs/*": ["./types/*"],
      "@typs": ["./types"]
    },
    "rootDirs": ["./"],
    "typeRoots": ["./types"],
    "types": ["mocha", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./tests/*"]
}
